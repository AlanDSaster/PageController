<article>
	<link rel='stylesheet' href='/css/pages/table.css' />
	<h1>{{title}}</h1>
	<table class='paginated-table'>
		<thead>
			<tr>
				<th>
					text
				</th>
			</tr>
		</thead>
		<tbody>
			{{#each page as | text | }}
			<tr>
				<td>
					{{text}}
				</td>
			</tr>
			{{/each}}
		</tbody>
		<tfoot>
			<tr>
				<td colspan=99>
					<form action='/page' method='post' >
						<input name='destination' type='number' class='hidden' value='{{first}}' />
						<input type='submit' value='First' />
					</form>
					<form action='/page' method='post' >
						<input name='destination' type='number' class='hidden' value='{{previous}}' />
						<input type='submit' value='Previous' />
					</form>
					Page : 
					<form action='/page' method='post'>
						<select id='page-select' name='destination' onchange='this.parentNode.submit();'>
							<!-- generated by script -->
						</select>
					</form>
					 of : {{ last }}
					<script type='text/javascript'>
						let select = document.getElementById('page-select');
						for(let i=0,z={{last}}; i<z; i++) {
							let option = document.createElement('option');
							let label = i+1;
							option.value = label;
							option.innerText = label;
							select.appendChild(option);
							if(option.value == {{last}} + 1) option.selected = true;
						}
						select.value = parseInt({{current}});
					</script>
					<form action='/page' method='post' >
						<input name='destination' type='number' class='hidden' value='{{next}}' />
						<input type='submit' value='Next' />
					</form>
					<form action='/page' method='post' >
						<input name='destination' type='number' class='hidden' value='{{last}}' />
						<input type='submit' value='Last' />
					</form>
				</td>
			</tr>
		</tfoot>
	</table>
</article>